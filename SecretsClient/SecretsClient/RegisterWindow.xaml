<Window x:Class="SecretsClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="300"
        Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <StackPanel Margin="20">

        <TextBlock Text="Логин"/>
        <TextBox x:Name="LoginBox" Height="25"/>

        <TextBlock Text="Пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" Height="25"/>

        <TextBlock Text="Повторите пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Height="25"/>

        <TextBlock Text="Роль" Margin="0,10,0,0"/>
        <ComboBox x:Name="RoleBox" Height="25" SelectedIndex="0">
            <ComboBoxItem Content="user"/>
            <ComboBoxItem Content="admin"/>
        </ComboBox>

        <Button Content="Зарегистрироваться"
                Height="30"
                Margin="0,20,0,0"
                Click="Register_Click"/>

    </StackPanel>
</Window>
