<Page x:Class="SecretsClient.AuditLogWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="UserFilter" Width="120"/>
            <TextBox x:Name="ActionFilter" Width="120" Margin="10,0,0,0"/>
            <Button Content="Фильтр" Margin="10,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="AuditGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"/>
    </Grid>
</Page>
