<Window x:Class="SecretsClient.SecretEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Секрет"
        Height="330"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20">

        <!-- Тип секрета -->
        <TextBlock Text="Тип секрета"/>
        <ComboBox x:Name="TypeBox"
                  Height="25"
                  SelectedIndex="0">
            <ComboBoxItem Content="Пароль"/>
            <ComboBoxItem Content="Токен"/>
            <ComboBoxItem Content="API ключ"/>
            <ComboBoxItem Content="PIN"/>
            <ComboBoxItem Content="Другое"/>
        </ComboBox>

        <!-- Значение -->
        <TextBlock Text="Значение секрета"
                   Margin="0,10,0,0"/>
        <TextBox x:Name="ValueBox"
                 Height="80"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>

        <!-- Срок в днях -->
        <TextBlock Text="Срок действия (в днях)"
                   Margin="0,10,0,0"/>

        <TextBox x:Name="DaysBox"
                 Height="25"
                 ToolTip="Введите количество дней (например 30)"/>

        <Button Content="Сохранить"
                Height="30"
                Margin="0,20,0,0"
                Click="Save_Click"/>
    </StackPanel>
</Window>
