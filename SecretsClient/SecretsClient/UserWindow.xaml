<Window x:Class="SecretsClient.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель пользователя"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Height="25"
                     Margin="0,0,10,0"/>

            <Button Content="Найти"
                    Width="80"
                    Click="Search_Click"/>

            <Button Content="Добавить"
                    Width="90"
                    Margin="10,0,0,0"
                    Click="AddSecret_Click"/>

            <Button Content="Редактировать"
                    Width="120"
                    Margin="10,0,0,0"
                    Click="EditSecret_Click"/>
        </StackPanel>

        <!-- Таблица секретов -->
        <DataGrid x:Name="SecretsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id_secrets}" Width="50"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding secret_type}" Width="100"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding secret_value}" Width="*"/>
                <DataGridTextColumn Header="Создан" Binding="{Binding created_at}" Width="150"/>
                <DataGridTextColumn Header="Истекает" Binding="{Binding expires_at}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
