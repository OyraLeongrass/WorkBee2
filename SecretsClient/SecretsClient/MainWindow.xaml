<Window x:Class="SecretsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="242" Width="300"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">

        <TextBlock Text="Логин" />
        <TextBox x:Name="LoginBox" Height="25"/>

        <TextBlock Text="Пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" Height="25"/>

        <Button Content="Войти"
                Margin="0,15,0,0"
                Height="30"
                Click="Login_Click"/>
        <Button Content="Зарегистрироватся"
        Margin="0,15,0,0"
        Height="30"
        Click="Login_Click"/>
    </StackPanel>
</Window>
