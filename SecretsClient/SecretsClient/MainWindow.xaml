<Window x:Class="SecretsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecretsClient"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBox x:Name="LoginBox" Text="Логин"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,10,0,0"/>
        <Button Content="Войти" Click="Login_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
